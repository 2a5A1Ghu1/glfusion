{!!if {type}=='info' !!}
<script>
	jQuery(document).ready(function($) {
		$.UIkit.notify("{message}",{status:'success', timeout: 3000});
	});
</script>
{!else}
{!!if {type}=='error' !!}
  {!!set class 'uk-alert-danger' !!}
{!endif}
<div class="uk-alert {class}" data-uk-alert>
    <a href="" class="uk-alert-close uk-close"></a>
    <p>{message}</p>
</div>
{!endif}
