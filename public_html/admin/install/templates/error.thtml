<form action="index.php" method="post">
  <input type="hidden" name="previousstep" value="{step}" />
  {hiddenfields}

<div class="step floatleft">
  <div class="stepheading">
    <span class="floatright" style="font-size:12px;">
      <input style="vertical-align:middle;float:right" type="submit" name="prev" class="submit" value="&lt;&lt; {lang_prev}" />
    </span>
    {title}
  </div>

  <div class="stepfields" style="width:100%;">
    <span>
    {text}
    </span>
  </div>
</div>
</form>